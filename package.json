{
    "name": "reviewprompt",
    "version": "0.12.0",
    "description": "Unified AI rules management CLI tool that generates configuration files for various AI development tools",
    "keywords": [
        "ai",
        "rules",
        "cli",
        "copilot",
        "cursor",
        "cline",
        "configuration",
        "development"
    ],
    "homepage": "https://github.com/dyoshikawa/reviewprompt#readme",
    "bugs": {
        "url": "https://github.com/dyoshikawa/reviewprompt/issues"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/dyoshikawa/reviewprompt.git"
    },
    "license": "MIT",
    "author": "dyoshikawa",
    "type": "module",
    "main": "dist/index.js",
    "module": "dist/index.mjs",
    "types": "dist/index.d.ts",
    "bin": {
        "reviewprompt": "dist/index.js"
    },
    "files": [
        "dist"
    ],
    "scripts": {
        "build": "tsup src/cli/index.ts --format cjs,esm --dts --clean",
        "check": "pnpm run fmt:check && pnpm run oxlint && pnpm run eslint && pnpm run typecheck",
        "cspell": "cspell \"**/*\"",
        "dev": "tsx src/cli/index.ts",
        "eslint": "eslint . --max-warnings 0 --cache",
        "eslint:fix": "eslint . --fix --max-warnings 0 --cache",
        "fix": "pnpm run fmt && pnpm run oxlint:fix && pnpm run eslint:fix",
        "fmt": "oxfmt --write src/",
        "fmt:check": "oxfmt --check src/",
        "oxlint": "oxlint . --max-warnings 0",
        "oxlint:fix": "oxlint . --fix --max-warnings 0",
        "prepublishOnly": "pnpm build",
        "secretlint": "secretlint --secretlintignore .gitignore \"**/*\"",
        "sort": "sort-package-json",
        "test": "vitest run --silent",
        "test:coverage": "vitest run --coverage --silent",
        "test:watch": "vitest --silent",
        "typecheck": "tsgo --noEmit",
        "prepare": "simple-git-hooks && pnpm dlx rulesync@latest generate"
    },
    "simple-git-hooks": {
        "pre-commit": "pnpm exec lint-staged"
    },
    "dependencies": {
        "@octokit/graphql": "9.0.3",
        "@types/react": "19.2.9",
        "chokidar": "5.0.0",
        "clipboardy": "5.1.0",
        "commander": "14.0.2",
        "gray-matter": "4.0.3",
        "ink": "6.6.0",
        "ink-select-input": "6.2.0",
        "js-yaml": "4.1.1",
        "marked": "17.0.1",
        "micromatch": "4.0.8",
        "react": "19.2.3",
        "zod": "4.3.6"
    },
    "devDependencies": {
        "@eslint/js": "9.39.2",
        "@secretlint/secretlint-rule-preset-recommend": "11.3.0",
        "oxfmt": "0.26.0",
        "@tsconfig/node24": "24.0.4",
        "@types/js-yaml": "4.0.9",
        "@types/micromatch": "4.0.10",
        "@types/node": "25.0.10",
        "@typescript/native-preview": "7.0.0-dev.20260124.1",
        "@vitest/coverage-v8": "4.0.18",
        "cspell": "9.6.0",
        "eslint": "^9.30.1",
        "eslint-plugin-no-type-assertion": "1.3.0",
        "eslint-plugin-oxlint": "1.41.0",
        "eslint-plugin-zod-import": "0.3.0",
        "lint-staged": "16.2.7",
        "o3-search-mcp": "0.0.9",
        "oxlint": "1.41.0",
        "secretlint": "11.3.0",
        "simple-git-hooks": "2.13.1",
        "sort-package-json": "3.6.0",
        "tsup": "8.5.1",
        "tsx": "4.21.0",
        "typescript": "5.9.3",
        "typescript-eslint": "^8.35.1",
        "vitest": "4.0.18"
    },
    "packageManager": "pnpm@10.28.1",
    "engines": {
        "node": ">=20.0.0"
    },
    "publishConfig": {
        "access": "public"
    }
}
